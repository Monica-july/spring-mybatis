<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neuedu.dao.NoteMapper">
    <resultMap id="NoteMap" type="com.neuedu.entity.NoteVo">
        <id column="user_id" property="userId"/>
        <id column="note_id" property="noteId"/>
        <result column="note_status" property="noteStatus"/>
        <result column="note_type" property="noteType"/>
        <result column="note_path" property="notePath"/>
        <result column="note_title" property="noteTitle"/>
        <result column="note_parent" property="noteParent"/>
        <result column="note_create_time" property="noteCreateTime"/>
        <result column="note_modify_time" property="noteModifyTime"/>
    </resultMap>
    <select id="getRootKids" resultMap="NoteMap">
        SELECT * FROM tb_note n WHERE n.user_id = #{userId} and n.note_parent = '0' OR n.note_name = '我的文件夹';
    </select>

    <insert id="createNote" parameterType="com.neuedu.entity.NoteVo">
        INSERT INTO tb_note VALUES
        (#{userId},#{noteId},#{noteName},#{noteStatus},#{noteType},#{noteParent},
        #{notePath},#{noteCreateTime},#{noteModifyTime},#{noteRoot})
    </insert>
    
    <select id="getParentPath" resultType="java.lang.String">
        SELECT n.note_path FROM tb_note n WHERE n.note_id = #{parentid}
    </select>

    <select id="getNotes" resultMap="NoteMap">
        SELECT * FROM tb_note n WHERE n.user_id = #{userid} AND n.note_type = '1'
        AND n.note_status = '1' ORDER BY n.note_modify_time , n.note_create_time
    </select>

    <select id="getContent" resultMap="NoteMap">
        SELECT * FROM tb_note n HAVING n.user_id = #{userid} n.note_type = '1' AND n.note_create_time = MAX(n.note_modify_time)
    </select>

    <select id="getTree" resultMap="NoteMap">
        SELECT * FROM tb_note n WHERE n.user_id = #{userid} AND n.note_parent = #{noteparent} AND n.note_status = '1' AND n.note_root = '0'
    </select>
</mapper>